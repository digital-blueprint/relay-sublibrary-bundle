{
    "name": "dbp/relay-sublibrary-bundle",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-simplexml": "*",
        "api-platform/core": "^2.7.11",
        "dbp/relay-base-person-bundle": "^0.2.19",
        "dbp/relay-core-bundle": "^0.1.115",
        "directorytree/ldaprecord": "^3.0",
        "doctrine/collections": "^1.6",
        "doctrine/common": "^3.1",
        "guzzlehttp/guzzle": "^7.0",
        "kevinrob/guzzle-cache-middleware": "^3.3 || ^4.0 || ^5.0",
        "league/uri": "^6.4 || ^7.4",
        "symfony/framework-bundle": "^5.2",
        "symfony/security-core": "^5.2",
        "symfony/yaml": "^5.2",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/log": "^1.1.4 || ^2.0 || ^3.0",
        "symfony/cache": "^5.4",
        "symfony/config": "^5.4",
        "symfony/http-foundation": "^5.4",
        "symfony/http-kernel": "^5.4",
        "symfony/dependency-injection": "^5.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.50",
        "mockery/mockery": "^1.6.7",
        "nelmio/cors-bundle": "^2.4.0",
        "phpstan/phpstan": "^1.10.59",
        "phpstan/phpstan-phpunit": "^1.3.16",
        "phpunit/phpunit": "^9.6.17",
        "symfony/browser-kit": "^5.4.35",
        "symfony/config": "^5.4.36",
        "symfony/http-client": "^5.4.36",
        "symfony/monolog-bundle": "^3.10",
        "symfony/phpunit-bridge": "^5.4.36",
        "symfony/security-bundle": "^5.4.36",
        "symfony/twig-bundle": "^5.4.36",
        "vimeo/psalm": "^5.22.2",
        "symfony/error-handler":"^5.4.36",
        "symfony/monolog-bridge":"^5.4.35"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\SublibraryBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\SublibraryBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ]
    }
}
