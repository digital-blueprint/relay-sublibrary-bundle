{
    "name": "dbp/api-alma-bundle",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": "^7.3",
        "api-platform/core": "^2.4",
        "dbp/api-core-bundle": "@dev",
        "doctrine/common": "^3.0",
        "guzzlehttp/guzzle": "^6.0",
        "kevinrob/guzzle-cache-middleware": "^3.3",
        "league/uri": "^6.3",
        "myclabs/php-enum": "^1.7",
        "symfony/framework-bundle": "^4.1.12",
        "symfony/security-core": "^4.4",
        "symfony/yaml": "^4.4"
    },
    "require-dev": {
        "composer/semver": "^1.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "mockery/mockery": "^1.2",
        "nelmio/cors-bundle": "^2.1.0",
        "phpstan/phpstan": "^0.12.33",
        "phpstan/phpstan-phpunit": "^0.12.13",
        "symfony/browser-kit": "^4.4",
        "symfony/config": "^4.4",
        "symfony/http-client": "^4.4",
        "symfony/phpunit-bridge": "^4.4",
        "symfony/security-bundle": "^4.4",
        "symfony/twig-bundle": "^4.4",
        "vimeo/psalm": "^4.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../api-core-bundle"
        }
    ],
    "autoload": {
        "psr-4": {
            "DBP\\API\\AlmaBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "DBP\\API\\AlmaBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
          "php": "7.3"
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/simple-phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/simple-phpunit --atleast-version 0",
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/simple-phpunit --atleast-version 0",
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff --diff-format=udiff"
        ]
    }
}
